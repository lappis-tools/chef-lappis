#!/bin/bash

TARGET_DIR=/var/backups/codeschool
BACKUP_DIR=/app/codeschool/docker/volumes/db

LOG_FILE=/var/log/codeschool.log
LOG_FORMAT=[%b_%a_%Y-%m-%d-%R][codeschool-backup]

echo "Data do backup: " $(date +%Y/%m/%d-%R)

echo $(date +$LOG_FORMAT) \
  $(scp -P 21 -r root@<%= node['peers']['codeschool'] %>:$BACKUP_DIR/* $TARGET_DIR && echo "SCP to <%= node['peers']['codeschool'] %>. Success!") >> $LOG_FILE
