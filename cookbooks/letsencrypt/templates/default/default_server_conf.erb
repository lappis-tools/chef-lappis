server {
  listen 443 ssl;
  listen [::]:443 ssl;

  server_name <%= @server_name %>;

  location ~ /.well-known {
    allow all;
  }

  location / {
    proxy_pass http://<%= @server_ip %>:<%= @service_port %>;
    try_files $uri $uri/ =404;
  }
}

server {
  listen 80;
  server_name <%= @server_name %>;
  return 301 https://$host$request_uri;
}

